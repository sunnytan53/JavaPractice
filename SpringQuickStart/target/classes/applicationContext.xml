<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- should pass in a valid class (NOT interface) -->
    <bean id="bookDaoBean" class="org.sunny.dao.Book"/>
    <bean id="bookServiceBean" class="org.sunny.service.BookService">
        <!-- configure the relationship between service and dao -->
        <!-- name = class variable, ref = class id from bean -->
        <property name="bookDao" ref="bookDaoBean"/>
    </bean>
</beans>